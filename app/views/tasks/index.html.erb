<h1>My tasks</h1>

<ul>
<% @tasks.each do |task| %>
    <li>
      <h2>
        <%= task.completed %>
        <%= link_to task.title, task_path(task) %>
        <%= link_to "Delete", task_path(task),
        method: :delete,
        data: { confirm: "Are you sure?" } %>
      </h2>
    </li>
  <% end %>
</ul>

<%= link_to "Add a new task", tasks_new_path %>
